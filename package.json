{
  "name": "cvmeventi-countdown",
  "version": "2.9.11",
  "product": "Countdown",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "husky",
    "format": "prettier -w .",
    "package": "run build && companion-module-build",
    "build": "rimraf dist && run build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint:raw": "eslint",
    "lint": "run lint:raw ."
  },
  "type": "module",
  "author": "CVM Eventi <matteo.piccina@cvm.it>",
  "license": "MIT",
  "dependencies": {
    "@companion-module/base": "^1.11.3",
    "companion-module-utils": "^0.2.0",
    "got": "^13.0.0",
    "ws": "^7.5.10"
  },
  "devDependencies": {
    "@companion-module/tools": "^2.6.1",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.14",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.18.1"
  },
  "engines": {
    "node": "^22.14",
    "yarn": "^4"
  },
  "prettier": "@companion-module/tools/.prettierrc.json",
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint:raw --fix"
    ]
  },
  "packageManager": "yarn@4.10.2"
}
